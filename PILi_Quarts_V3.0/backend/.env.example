# PILi Quarts Backend - Environment Variables Template
# Copy this file to .env and fill in your values
# Following deployment-procedures: Environment configuration

# ============================================================================
# APPLICATION
# ============================================================================
APP_ENV=development  # development, staging, production
APP_NAME=PILi Quarts
APP_VERSION=1.0.0
DEBUG=true

# ============================================================================
# SERVER
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pili_quarts
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# PILI AI MODULE
# ============================================================================
PILI_GEMINI_API_KEY=your-gemini-api-key-here
PILI_GEMINI_MODEL=gemini-2.0-flash-exp
PILI_GEMINI_TEMPERATURE=0.7
PILI_GEMINI_MAX_TOKENS=8192

PILI_MAX_HISTORY=50
PILI_CONTEXT_WINDOW=10
PILI_TIMEOUT_SECONDS=30

# WebSocket
PILI_WS_HEARTBEAT_INTERVAL=30
PILI_WS_MAX_CONNECTIONS=1000

# Rate Limiting
PILI_RATE_LIMIT_REQUESTS=60
PILI_RATE_LIMIT_WINDOW=60

# ============================================================================
# AUTHENTICATION
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# REDIS (Optional - for caching and sessions)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3009,http://localhost:3000,http://127.0.0.1:3009

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================================
# FILE STORAGE (Future - S3/MinIO)
# ============================================================================
# STORAGE_TYPE=local  # local, s3, minio
# S3_BUCKET=pili-quarts-documents
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=http://localhost:9000  # For MinIO

# ============================================================================
# EMAIL (Future)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@pili-quarts.com

# ============================================================================
# MONITORING (Future)
# ============================================================================
# SENTRY_DSN=your-sentry-dsn
# ENABLE_METRICS=true
