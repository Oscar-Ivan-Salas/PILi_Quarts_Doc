# Vercel Configuration
# Frontend deployment configuration
# https: //vercel.com/docs/configuration
{
    "version": 2,
    "name": "pili-quarts-frontend",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "VITE_API_URL": "@api_url",
        "VITE_WS_URL": "@ws_url",
        "VITE_APP_NAME": "PILi Quarts",
        "VITE_ENABLE_WEBSOCKET": "true"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}